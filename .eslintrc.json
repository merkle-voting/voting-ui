{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            // Allows for the parsing of JSX
            "jsx": true
        }
    },
    "settings": {
        "next": {
            "rootDir": "./"
        }
    },
    "ignorePatterns": [
        "src/abis/types",
        "node_modules",
        "coverage",
        "build",
        ".next",
        "dist",
        ".DS_Store",
        ".env.local",
        ".env.development.local",
        ".env.test.local",
        ".env.production.local",
        ".idea/",
        ".vscode/",
        "package-lock.json",
        "yarn.lock"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "next",
        "next/core-web-vitals",
        "plugin:react-hooks/recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "plugins": ["simple-import-sort", "unused-imports"],
    "globals": {
        "React": "readonly"
    },
    "rules": {
        "unused-imports/no-unused-imports": "error",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-empty-interface": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "prettier/prettier": "error",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/ban-ts-ignore": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off", // take this off here
        "@typescript-eslint/no-empty-function": "off", // take this off here
        "object-shorthand": ["error", "always"],
        "no-case-declarations": "off",
        "@typescript-eslint/no-restricted-imports": [
            "error",
            {
                "paths": [
                    {
                        "name": "@ethersproject/providers",
                        "message": "Please only use Providers instantiated in constants/providers to improve traceability.",
                        "allowTypeImports": true
                    }
                ]
            }
        ]
    }
}
